{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson: setup",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if exist builddir\\meson-private\\coredata.dat (meson setup --reconfigure builddir) else (meson setup --native-file meson.native.ini builddir)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "meson: compile",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "builddir"
            ],
            "dependsOn": [
                "meson: setup"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "install: refresh (.install)",
            "type": "shell",
            "command": "python",
            "args": [
                "tools/refresh_install.py",
                "--build-dir",
                "builddir",
                "--install-dir",
                ".install",
                "--base-game",
                "baseq2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "meson: build",
            "dependsOn": [
                "meson: compile",
                "install: refresh (.install)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
